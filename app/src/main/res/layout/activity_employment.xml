<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.myapplication.EmploymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/textview"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/pre_emp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/bluehole"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/bluehole2" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/emptext1"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text111" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/kk"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/home1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/emp2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/emp222" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/emptext2"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text22" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/kk"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/home2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/emp3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/emp333" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/emptext3"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text33" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/kk"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/home3"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call3"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/emp4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/emp444" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/emptext4"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text44" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/kk"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/home4"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call4"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/emp5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/emp555" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/emptext5"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text55" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/kk"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/home5"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call5"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/emp6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/emp666" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/emptext6"
                            android:layout_width="210dp"
                            android:layout_height="100dp"
                            android:background="@drawable/text66" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/kk"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/home6"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/home2" />
                            <Button
                                android:id="@+id/call6"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/call2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation"
        android:background="@color/colorPrimaryDark"/>

</android.support.constraint.ConstraintLayout>
